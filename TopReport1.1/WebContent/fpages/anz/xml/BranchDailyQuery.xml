<CommQry title="各行日销售业绩查询" navigate="澳新银行&gt;各行日销售业绩查询"
    type="call" interface = "false" pagesize="15" async="true" databusid=""
    transdataactionurl="/trans/TransDataAction.do" txnlogflag="true"
    getterclassname="com.huateng.report.anz.getter.BranchDailyQueryGetter" >
<Include id="BankParam" />

<!-- <PageQryExp type="XLS" limit="true" encoding="GBK" url="/trans/qryExp.do" desc="各行日销售业绩查询"/> -->
<Fields>
		<!-- status :F-基本信息中显示  N-不显示 D-详细信息中显示 A-基本、详细信息中都显示  -->
		<!-- primary : true-作为表单项记录上传　false-不作为表单项上传 -->
		
		<Field id="updt" desc="日期" edittype="text" require="false" size="20" errmsg=""  datatype="string" status="F" xpath="/date"  />
		<Field id="brno" desc="机构号" edittype="text" require="false" size="20" errmsg=""  datatype="string" status="F" xpath="/brno"  />
		<Field id="ncustNum" desc="新开户数" edittype="text" require="false" size="20" errmsg=""  datatype="string" status="F" xpath="/ncustNum"  />
		<Field id="allamt" desc="交易总额" edittype="text" size="20" require="false" errmsg="" datatype="currency" scale="2" status="F" xpath="/allamt" />
		<Field id="inamt" desc="进账金额" edittype="text" size="10" require="false" errmsg="" datatype="currency"  scale="2" status="F" xpath="/inamt" />
		<Field id="outamt" desc="出帐金额" edittype="text" size="20" require="false" errmsg="" datatype="currency" scale="2" status="F" xpath="/outamt" />
		<Field id="countSolder" desc="客户经理数" edittype="text" require="false" size="20" errmsg=""  datatype="string" status="F" xpath="/countSolder"  />
		<Field id="avncustNum" desc="平均新开户数" edittype="text" require="false" size="20" errmsg=""  datatype="string" status="F" xpath="/avncustNum"  />
		<Field id="avinamt" desc="平均进账金额" edittype="text" size="10" require="false" errmsg="" datatype="currency"  scale="2" status="F" xpath="/avinamt" />
		<Field id="avoutamt" desc="平均出帐金额" edittype="text" size="20" require="false" errmsg="" datatype="currency" scale="2" status="F" xpath="/avoutamt" />
		<Field id="opr" desc="操作" edittype="text" datatype="string" xpath="/brno" />
		
</Fields>

<Where >
	<TextBox id="Qdate" dataType="date" size="" desc="交易日期"
			tip="交易日期" index="0" default="" scale="" require="true" readOnly=""
			rules="" errmsg="" />
		<Option id="Qbrno"   size=""
			desc="机构号" tip="机构号" type="string" translated="CQ:BctlAllSelect"
			fieldmap="Qbrno=brcode;QbrnoName=brcodeTypeName"
			viewField="brcodeTypeName" dropdowntype="dynamic" init="false" index="2"
			require="true" readOnly="" />
	
</Where>

<Operations>
<Button id="btSee" name="btSee" desc="查看明细"
			operation="href"
			url="" txn="" />

</Operations>
	<Script></Script>

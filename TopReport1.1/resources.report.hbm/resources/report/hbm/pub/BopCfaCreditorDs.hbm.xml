<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="resource.bean.report">
	<class
		name="BopCfaCreditorDs"
		table="BOP_CFA_CREDITOR_DS"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="string"
			column="CREDITOR_ID"
		>
		</id>

		<property
			name="creditorcode"
			column="CREDITORCODE"
			type="string"
			not-null="false"
			length="11"
		/>
		<property
			name="creditorname"
			column="CREDITORNAME"
			type="string"
			not-null="false"
			length="128"
		/>
		<property
			name="creditornamen"
			column="CREDITORNAMEN"
			type="string"
			not-null="false"
			length="128"
		/>
		<property
			name="creditorca"
			column="CREDITORCA"
			type="big_decimal"
			not-null="false"
			length="22"
		/>
		<property
			name="creditortype"
			column="CREDITORTYPE"
			type="string"
			not-null="false"
			length="8"
		/>
		<property
			name="crehqcode"
			column="CREHQCODE"
			type="string"
			not-null="false"
			length="3"
		/>
		<property
			name="opercode"
			column="OPERCODE"
			type="string"
			not-null="false"
			length="3"
		/>
		<property
			name="crtTm"
			column="CRT_TM"
			type="java.util.Date"
			not-null="false"
			length="14"
		/>
		<property
			name="recId"
			column="REC_ID"
			type="string"
			not-null="false"
			length="32"
		/>


	</class>	
</hibernate-mapping>